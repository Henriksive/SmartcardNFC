<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Payload Activity"
        android:layout_marginTop="50px"
        android:id="@+id/btnPayload"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Crypto Activity"
        android:layout_marginTop="50px"
        android:id="@+id/btnCrypto"
        android:layout_below="@+id/btnPayload"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Keystore Activity"
        android:layout_marginTop="50px"
        android:id="@+id/btnKeyStore"
        android:layout_below="@+id/btnCrypto"
        android:layout_alignParentStart="true" />
</RelativeLayout>
