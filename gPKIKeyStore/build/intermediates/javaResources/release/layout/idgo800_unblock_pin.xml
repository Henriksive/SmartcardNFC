<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="fill_vertical|center"
    android:clickable="true"
>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
	    android:paddingTop="10dip"
    >
		<TextView
	        android:id="@+id/text_challenge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        style="@style/idgo800_Text.Black"
	    />
	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dip"
    >
		<TextView
	        android:id="@+id/edit_challenge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        style="@style/idgo800_Text.Large"
	    />
	</LinearLayout>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
	    android:paddingTop="10dip"
    >
		<TextView
	        android:id="@+id/text_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        style="@style/idgo800_Text.Black"
	    />
	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dip"
    >
	    <EditText 
	        android:id="@+id/edit_pwd"
	        android:layout_width="260dip"
	        android:layout_height="48dp"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:background="@drawable/idgo800_entry_field"
	        android:gravity="center_vertical|center_horizontal"
	        android:maxLength="16"
	        android:password="false"
	        android:inputType="textVisiblePassword"
	    />
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
	    android:paddingTop="10dip"
    >
		<TextView
	        android:id="@+id/text_new_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        style="@style/idgo800_Text.Black"
	    />
	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dip"
    >
	    <EditText 
	        android:id="@+id/edit_new_pwd"
	        android:layout_width="260dip"
	        android:layout_height="48dp"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:background="@drawable/idgo800_entry_field"
	        android:gravity="center_vertical|center_horizontal"
	        android:password="true"
	        android:inputType="textVisiblePassword"
	    />
	</LinearLayout>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
	    android:paddingTop="10dip"
    >
		<TextView
	        android:id="@+id/text_conf_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        style="@style/idgo800_Text.Black"
	    />
	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dip"
	    android:paddingBottom="10dip"
    >
	    <EditText 
	        android:id="@+id/edit_conf_pwd"
	        android:layout_width="260dip"
	        android:layout_height="48dp"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:background="@drawable/idgo800_entry_field"
	        android:gravity="center_vertical|center_horizontal"
	        android:password="true"
	        android:inputType="textVisiblePassword"
	    />
	</LinearLayout>
	
</LinearLayout>




